{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "rootDirs": [".", "libs"],
    "paths": {
      "@penguin-surf/game-engine": ["libs/game-engine/src/index.ts"],
      "@penguin-surf/game-engine/store/*": ["libs/game-engine/src/store/*"],
      "@penguin-surf/types": ["libs/types/src/index.ts"],
      "@penguin-surf/ui-components": ["libs/ui-components/src/index.ts"],
      "@penguin-surf/utils": ["libs/utils/src/index.ts"]
    }
  }
}
